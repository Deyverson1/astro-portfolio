---
import Cards from "../components/Cards.astro";
import Footer from "../components/dashboard/Footer.astro";
import Layout from "../layouts/Layout.astro";
import { projects } from "../database/DataProjects";

---

<Layout title="Projects">
  <section class="px-64 py-20 flex flex-col gap-y-8">
    <span>
      <h1 class="text-2xl font-bold">Proyectos </h1>
      <h3 class="dark:text-gray-300 text-gray-800">
        Esta es una colección de proyectos realizados tanto en el ámbito
        del desarrollo de Software como en mi carrera de Mecatrónica Industrial.
      </h3>
    </span>
    <Cards projects={projects} active={false} />
  </section>
  <Footer />
</Layout>
