---
import { SkillData } from '../../info/SkillsData';
---

<div
  class="flex flex-col flex-1 flex-wrap px-2 lg:px-0 gap-x-96 gap-y-2 pt-2 2xl:pt-8"
>
  <section class="flex flex-wrap justify-center">
    {
      SkillData.map((data) => (
        <article class="flex flex-wrap cursor-default">
          <div class="gap-x-4">
            <div class="flex items-center gap-x-4 text-gray-900  border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-normal rounded-xl text-base px-4 py-2 me-2 mb-2  dark:text-white dark:border-gray-600 dark:hover:bg-neutral-800 dark:hover:border-gray-600 dark:focus:ring-neutral-900">
              <data.icon class="size-5 2xl:size-10 fill-black dark:fill-white" />
              <h3 class="text-gray-900 dark:text-white text-sm 2xl::text-lg">
                {data.name}
              </h3>
            </div>
          </div>
        </article>
      ))
    }
  </section>
</div>
