---
import { SkillData } from "../../info/SkillsData";
---

<div class="flex flex-col flex-1 flex-wrap px-2 lg:px-0 gap-x-2 gap-y-2">
  <section class="flex flex-wrap justify-center">
    {
      SkillData.map((data) => (
        <article class="flex flex-wrap cursor-default">
          <div class="gap-x-2">
            <div class="flex items-center gap-x-2 text-gray-900  border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-nromal rounded-xl text-base px-4 py-2 me-2 mb-2  dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
              <data.icon class="size-10 fill-black dark:fill-white" />
              <h3 class="text-gray-900 dark:text-white font-sm">{data.name}</h3>
            </div>
          </div>
        </article>
      ))
    }
  </section>
</div>
