---
import BrandVercel from './icons/BrandVercel.astro';
import GithubCat from './icons/GithubCat.astro';
import Analytics from './icons/Analytics.astro';
import ProjectDetails from './ProjectDetails';

const { projects, active, display, width } = Astro.props;
---

<div
  class={`flex ${display} items-center justify-center px-2 text-center lg:px-0 gap-y-16`}
>
  {
    projects.map(
      (data: {
        id: string;
        title: string;
        image: string;
        description: string;
        tags: any;
        github: string;
        link: string;
        color: string;
        documentation: string;
      }) => (
        <article
          class={`p-2 flex-wrap justify-center items-center w-full ${width} flex md:gap-x-10  space-x-0 space-y-8 group  md:space-y-0`}
        >
          <ProjectDetails
            image={data.image}
            title={data.title}
            id={data.id}
            active={active}
            client:load
          />
          <div class="items-center justify-center w-full pt-4 md:w-1/2 md:max-w-lg 2xl:w-4/6 2xl:max-w-full">
            <h3 class="pt-0 mt-0 text-2xl font-bold 2xl:text-3xl">
              {data.title}
            </h3>
            <div class="flex flex-row flex-wrap items-center justify-center mt-2">
              <div class="mt-2 text-gray-700 2xl:text-xl dark:text-gray-400">
                {data.description}
              </div>
              <ul class="flex items-center justify-center w-full py-4 mb-2 text-center gap-x-2 hover:cursor-default gap-y-8">
                {data.tags.map(
                  (tag: { icon: any; name: string; class: string }) => (
                    <li
                      class={`flex text-white dark:text-white items-center gap-x-2 rounded-full 2xl:py-2 2xl:text-base 2xl:px-4 py-1 px-3 text-sm ${tag.class} opacity-90 hover:opacity-100`}
                    >
                      <tag.icon class="size-4 2xl:size-6" />
                      {tag.name}
                    </li>
                  )
                )}
              </ul>

              <footer class="flex items-end justify-start mt-4 gap-x-2 2xl:gap-x-3">
                {data.github && (
                  <a
                    target="_blank"
                    class="flex items-center px-4 py-2 mb-2 font-normal text-gray-900 bg-white border border-gray-300 gap-x-2 focus:outline-none hover:bg-gray-200 focus:ring-4 focus:ring-gray-200 rounded-xl 2xl:text-base me-2 dark:bg-neutral-900 dark:text-white dark:border-gray-600 dark:hover:bg-neutral-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
                    href={data.github}
                  >
                    <GithubCat class="size-5 fill-dark dark:fill-white" />
                    Código
                  </a>
                )}
                {data.link && (
                  <a
                    target="_blank"
                    class="flex items-center px-4 py-2 mb-2 text-base font-normal text-gray-900 bg-white border border-gray-300 gap-x-2 focus:outline-none hover:bg-gray-200 focus:ring-4 focus:ring-gray-200 rounded-xl 2xl:text-base me-2 dark:bg-neutral-900 dark:text-white dark:border-gray-600 dark:hover:bg-neutral-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
                    href={data.link}
                  >
                    <BrandVercel class="size-5 fill-black dark:fill-white" />
                    Visitar
                  </a>
                )}
                {data.documentation && (
                  <a
                    class="flex items-center px-4 py-2 mb-2 text-base font-normal text-gray-900 bg-white border border-gray-300 gap-x-2 focus:outline-none hover:bg-gray-200 focus:ring-4 focus:ring-gray-200 rounded-xl me-2 dark:bg-neutral-950 dark:text-white dark:border-gray-600 dark:hover:bg-neutral-800 dark:hover:border-gray-600 dark:focus:ring-gray-700"
                    href={data.documentation}
                  >
                    <Analytics class="size-5" />
                    Documentación
                  </a>
                )}
              </footer>
            </div>
          </div>
        </article>
      )
    )
  }
</div>
