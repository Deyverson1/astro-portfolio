---
import Theme from './Theme.astro'
const contentNav = [
  {title: "Inicio", label:'/', url:'/'},
  { title: "Proyectos", label: "/#proyectos", url: "/#projects" },
  { title: "Sobre mi", label: "/#sobre-mi", url: "/#sobre-mi" },
  { title: "Contacto", label: "/#contacto", url: "mailto:deyversongp@gmail.com",},
  { title: "Curriculum", label: "/#curriculum", url: "/curriculum" },
];
---

<header
  class="fixed top-0 z-10  flex items-center justify-center w-full mx-auto mt-2"
>
  <nav
    class="flex lg:px-3 rounded-full text-medium font-medium  text-gray-600 dark:text-gray-200 justify-center items-center"
  >
    {
      contentNav.map((content) => (
        <a
          class="  text-sm relative block px-2 py-2  hover:text-gray-500 dark:hover:text-gray-600"
          aria-label={content.label}
          href={content.url}
        >
          {content.title}
        </a>
      ))
    }
    <Theme/>
  </nav>
</header>

<style>
  nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }
 
  @keyframes nav-shadown {
    to {
      @apply shadow-lg ring-1 backdrop-blur text-white bg-gradient-to-r from-blue-600 via-blue-700 to-blue-600 ring-black/10;
    }
  }
  
</style>
